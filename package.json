{
	"name": "color-fns",
	"version": "0.1.0",
	"description": "Functional color utility library",
	"repository": "https://github.com/ajlende/color-fns",
	"license": "MIT",
	"author": "Alex Lende <ajlende@gmail.com>",
	"sideEffects": false,
	"main": "cjs/index.js",
	"module": "esm/index.js",
	"typings": "types/index.d.ts",
	"scripts": {
		"build": "yarn clean && concurrently \"yarn:build:*\"",
		"build:cjs": "tsc -p tsconfig.cjs.json",
		"build:esm": "tsc -p tsconfig.esm.json",
		"build:types": "tsc -p tsconfig.types.json",
		"clean": "rimraf esm cjs types tsconfig.esm.tsbuildinfo tsconfig.cjs.tsbuildinfo tsconfig.types.tsbuildinfo",
		"coverage": "codecov",
		"lint": "(eslint '**/*.{js,ts,tsx}' || true) && tsc --noEmit",
		"lint:fix": "(eslint --cache --fix '**/*.{js,ts,tsx}' || true) && prettier --write .",
		"prepublish": "yarn build",
		"test": "nyc ava",
		"test:watch": "ava --watch"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*": [
			"eslint --fix",
			"prettier --write"
		]
	},
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^1.0.1",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"ava": "^3.15.0",
		"codecov": "^3.8.1",
		"concurrently": "^5.3.0",
		"date-fns": "^2.16.1",
		"eslint": "^7.19.0",
		"eslint-config-prettier": "^7.2.0",
		"eslint-plugin-ava": "^11.0.0",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^4.3.8",
		"lint-staged": "^10.5.3",
		"nyc": "^15.1.0",
		"prettier": "^2.2.1",
		"rimraf": "^3.0.2",
		"source-map-support": "^0.5.19",
		"ts-node": "^9.1.1",
		"typescript": "^4.1.3"
	},
	"engines": {
		"node": ">=10.13.0"
	}
}
