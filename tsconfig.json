{
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ESNext",
		"lib": ["ESNext"],
		"rootDir": "src",
		"outDir": "build",
		"moduleResolution": "node",
		"incremental": true,
		"isolatedModules": true,
		"sourceMap": true,
		"removeComments": true,
		"strict": true
	},
	"include": ["src"]
}
